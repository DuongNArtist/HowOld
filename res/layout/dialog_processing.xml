<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:background="@drawable/bkg_photo"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding" >

    <TextView
        android:id="@+id/tv_processing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/processing"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_loading_0"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:contentDescription="@drawable/shp_oval"
                android:src="@drawable/shp_oval" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_loading_1"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:contentDescription="@drawable/shp_oval"
                android:src="@drawable/shp_oval" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_loading_2"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:contentDescription="@drawable/shp_oval"
                android:src="@drawable/shp_oval" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_loading_3"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:contentDescription="@drawable/shp_oval"
                android:src="@drawable/shp_oval" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_loading_4"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:contentDescription="@drawable/shp_oval"
                android:src="@drawable/shp_oval" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>